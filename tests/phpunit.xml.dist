<?xml version="1.0" encoding="UTF-8"?>
<!-- TODO set checkForUnintentionallyCoveredCode="true" once https://www.drupal.org/node/2626832 is resolved. -->
<!-- PHPUnit expects functional tests to be run with either a privileged user
 or your current system user. See core/tests/README.md and
 https://www.drupal.org/node/2116263 for details.
-->
<phpunit bootstrap="tests/bootstrap.php" colors="true"
         beStrictAboutTestsThatDoNotTestAnything="true"
         beStrictAboutOutputDuringTests="true"
         beStrictAboutChangesToGlobalState="true"
         printerClass="\Drupal\Tests\Listeners\HtmlOutputPrinter">
  <php>
    <!-- Set error reporting to E_ALL. -->
    <ini name="error_reporting" value="32767"/>
    <!-- Do not limit the amount of memory tests take to run. -->
    <ini name="memory_limit" value="-1"/>
    <!-- Example SIMPLETEST_BASE_URL value: http://localhost -->
    <env name="SIMPLETEST_BASE_URL" value="sqlsrv.drupal.org"/>
    <!-- Example SIMPLETEST_DB value: mysql://username:password@localhost/databasename#table_prefix -->
    <env name="SIMPLETEST_DB" value="sqlsrv://sa:Password12!@localhost/mydrupalsite"/>
    <!-- Example BROWSERTEST_OUTPUT_DIRECTORY value: /path/to/webroot/sites/simpletest/browser_output -->
    <env name="BROWSERTEST_OUTPUT_DIRECTORY" value=""/>
    <!-- To have browsertest output use an alternative base URL. For example if
     SIMPLETEST_BASE_URL is an internal DDEV URL, you can set this to the
     external DDev URL so you can follow the links directly.
    -->
    <env name="BROWSERTEST_OUTPUT_BASE_URL" value=""/>
    <!-- To disable deprecation testing completely uncomment the next line. -->
    <env name="SYMFONY_DEPRECATIONS_HELPER" value="disabled"/>

    <!-- Example for changing the driver class for mink tests MINK_DRIVER_CLASS value: 'Drupal\FunctionalJavascriptTests\DrupalSelenium2Driver' -->
    <env name="MINK_DRIVER_CLASS" value=''/>
    <!-- Example for changing the driver args to mink tests MINK_DRIVER_ARGS value: '["http://127.0.0.1:8510"]' -->
    <env name="MINK_DRIVER_ARGS" value=''/>
    <!-- Example for changing the driver args to phantomjs tests MINK_DRIVER_ARGS_PHANTOMJS value: '["http://127.0.0.1:8510"]' -->
    <env name="MINK_DRIVER_ARGS_PHANTOMJS" value=''/>
    <!-- Example for changing the driver args to webdriver tests MINK_DRIVER_ARGS_WEBDRIVER value: '["chrome", { "chromeOptions": { "w3c": false } }, "http://localhost:4444/wd/hub"]' For using the Firefox browser, replace "chrome" with "firefox" -->
    <env name="MINK_DRIVER_ARGS_WEBDRIVER" value=''/>
  </php>
  <testsuites>
    <testsuite name="database">
      <directory suffix="Test.php">tests/Drupal/KernelTests/Core/Database</directory>
    </testsuite>
    <testsuite name="passing_database">
      <file>tests/Drupal/KernelTests/Core/Database/AlterTest.php</file>
      <file>tests/Drupal/KernelTests/Core/Database/BasicSyntaxTest.php</file>
      <file>tests/Drupal/KernelTests/Core/Database/CaseSensitivityTest.php</file>
      <file>tests/Drupal/KernelTests/Core/Database/ConnectionTest.php</file>
      <file>tests/Drupal/KernelTests/Core/Database/ConnectionUnitTest.php</file>
      <file>tests/Drupal/KernelTests/Core/Database/DatabaseExceptionWrapperTest.php</file>
      <file>tests/Drupal/KernelTests/Core/Database/DatabaseLegacyTest.php</file>
      <file>tests/Drupal/KernelTests/Core/Database/DeleteTruncateTest.php</file>
      <file>tests/Drupal/KernelTests/Core/Database/FetchTest.php</file>
      <file>tests/Drupal/KernelTests/Core/Database/InsertDefaultsTest.php</file>
      <file>tests/Drupal/KernelTests/Core/Database/InsertLobTest.php</file>
      <file>tests/Drupal/KernelTests/Core/Database/InsertTest.php</file>
      <file>tests/Drupal/KernelTests/Core/Database/InvalidDataTest.php</file>
      <file>tests/Drupal/KernelTests/Core/Database/LargeQueryTest.php</file>
      <file>tests/Drupal/KernelTests/Core/Database/MergeTest.php</file>
      <file>tests/Drupal/KernelTests/Core/Database/NextIdTest.php</file>
      <file>tests/Drupal/KernelTests/Core/Database/PrefixInfoTest.php</file>
      <file>tests/Drupal/KernelTests/Core/Database/QueryTest.php</file>
      <file>tests/Drupal/KernelTests/Core/Database/RangeQueryTest.php</file>
      <file>tests/Drupal/KernelTests/Core/Database/RegressionTest.php</file>
      <file>tests/Drupal/KernelTests/Core/Database/ReplicaKillSwitchTest.php</file>
      <file>tests/Drupal/KernelTests/Core/Database/SchemaLegacyTest.php</file>
      <file>tests/Drupal/KernelTests/Core/Database/SelectCloneTest.php</file>
      <file>tests/Drupal/KernelTests/Core/Database/SelectOrderedTest.php</file>
      <file>tests/Drupal/KernelTests/Core/Database/SerializeQueryTest.php</file>
      <file>tests/Drupal/KernelTests/Core/Database/TaggingTest.php</file>
      <file>tests/Drupal/KernelTests/Core/Database/TransactionTest.php</file>
      <file>tests/Drupal/KernelTests/Core/Database/UpdateComplexTest.php</file>
      <file>tests/Drupal/KernelTests/Core/Database/UpdateLobTest.php</file>
      <file>tests/Drupal/KernelTests/Core/Database/UpdateTest.php</file>
      <file>tests/Drupal/KernelTests/Core/Database/UpsertTest.php</file>
    </testsuite>
    <testsuite name="failing_database">
      <file>tests/Drupal/KernelTests/Core/Database/LoggingTest.php</file>
      <file>tests/Drupal/KernelTests/Core/Database/SchemaTest.php</file>
      <file>tests/Drupal/KernelTests/Core/Database/SelectComplexTest.php</file>
      <file>tests/Drupal/KernelTests/Core/Database/SelectSubqueryTest.php</file>
      <file>tests/Drupal/KernelTests/Core/Database/SelectTest.php</file>
    </testsuite>
    <testsuite name="sqlsrv">
      <directory suffix="Test.php">../modules/contrib/sqlsrv</directory>
    </testsuite>
    <testsuite name="entity">
      <directory suffix="Test.php">tests/Drupal/KernelTests/Core/Entity</directory>
    </testsuite>
  </testsuites>
  <listeners>
    <listener class="\Drupal\Tests\Listeners\DrupalListener">
    </listener>
    <!-- The Symfony deprecation listener has to come after the Drupal listener -->
    <listener class="Symfony\Bridge\PhpUnit\SymfonyTestsListener">
    </listener>
  </listeners>
  <!-- Filter for coverage reports. -->
  <filter>
    <whitelist>
      <directory>../drivers/lib</directory>
      <!-- Extensions can have their own test directories, so exclude those. -->
      <directory>../modules/contrib</directory>
      <exclude>
        <directory>../modules/*/src/Tests</directory>
        <directory>../modules/*/tests</directory>
        <directory>../modules/*/*/src/Tests</directory>
        <directory>../modules/*/*/tests</directory>
      </exclude>
     </whitelist>
  </filter>
</phpunit>
